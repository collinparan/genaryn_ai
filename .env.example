# Genaryn AI Deputy Commander Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=genaryn
DB_PASSWORD=secure_password_change_in_production
DB_NAME=genaryn_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_in_production

# Digital Ocean LLM Endpoint
DO_LLM_ENDPOINT=https://w3af7ebiihzxumrnhjb2nh2o.agents.do-ai.run/api/v1/chat/completions
LLM_MODEL=meta-llama/llama-3.2-3b-instruct

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Service Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Session Configuration
SESSION_SECRET_KEY=session-secret-change-in-production
SESSION_EXPIRE_HOURS=24

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@genaryn.ai

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_SSE=true
ENABLE_DECISION_ANALYSIS=true
ENABLE_INTELLIGENCE_PROCESSING=true
ENABLE_MISSION_PLANNING=true
ENABLE_COLLABORATION=true

# Military Configuration
DEFAULT_CLASSIFICATION=UNCLASSIFIED
ENABLE_CLASSIFICATION_HANDLING=true
MDMP_MODE=enhanced
COA_ANALYSIS_DEPTH=comprehensive